<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="parameters" addfieldpath="/components/com_xipt/form">
		<field name="demo" type="xipt.watermarkpreview" default="" label="COM_XIPT_DEMO" description="COM_XIPT_DEMO_ACCORDING_TO_SET_WATERMARK_PARAMS" />
		<field name="enableWaterMark" type="radio" label="COM_XIPT_ENABLE_WATER_MARK" default="0" description="COM_XIPT_ENABLE_WATER_MARK_DESC">
			<option value="0">No</option>
  			<option value="1">Yes</option>		
		</field>
		<field name="typeofwatermark" type="radio" label="COM_XIPT_TYPE_OF_WATERMARK" default="0" description="COM_XIPT_ENABLE_WATER_MARK_DESC">
			<option value="0">COM_XIPT_TEXT</option>
  			<option value="1">COM_XIPT_IMAGE</option>		
		</field>
		<field name="xiImage" type ="xipt.uploadfile" label="COM_XIPT_UPLOAD_IMAGE" description="COM_XIPT_UPLOAD_IMAGE_DESC"/>
		<field name="xiText" type="text" default="P" label="COM_XIPT_DISPLAY_TEXT" description="COM_XIPT_ENTER_WATERMARK_DISPLAY_TEXT_DESC" />		
		<field name="xiWidth" type="text" default="40" label="COM_XIPT_WIDTH" description="COM_XIPT_SET_WIDTH_DESC"/>
		<field name="xiHeight" type="text" default="40" label="COM_XIPT_HEIGHT" description="COM_XIPT_HEIGHT_DESC"/>
		<field name="xiThumbWidth" type="text" default="20" label="COM_XIPT_WIDTH_OF_THUMB" description="COM_XIPT_WIDTH_OF_THUMB_DESC"/>
		<field name="xiThumbHeight" type="text" default="20" label="COM_XIPT_HEIGHT_OF_THUMB" description="COM_XIPT_HEIGHT_OF_THUMB_DESC"/>
						
		<field name="xiFontName" type="xipt.xifonts" default="monofont"  label="COM_XIPT_FONT" description="COM_XIPT_FONT_DESC"/>
		<field name="xiFontSize" type="text" default="26" label="COM_XIPT_FONT_SIZE" description="COM_XIPT_FONT_SIZE_DESC" />
		<field name="xiTextColor" type="xipt.colorbox" default="FFFFFF"  label="COM_XIPT_TEXT_COLOR" description="COM_XIPT_TEXT_COLOR_DESC"/>
		<field name="xiBackgroundColor"  type="xipt.colorbox" default="9CD052"  label="COM_XIPT_FILL_BAR_COLOR" description="COM_XIPT_FILL_BAR_COLOR_DESC"/>
		<field name="xiWatermarkPosition"  type="xipt.watermarkposition" default="rightbottom"  label="COM_XIPT_WATER_MARK_POSITION" description="COM_XIPT_WATER_MARK_POSITION_DESC"/>
	</fieldset>
</form>

