<?xml version="1.0" encoding="utf-8"?>
<config>
	<!-- PROFILETYPE SETTINGS -->
	<params group="basicPtypeSettings" addpath="/components/com_xipt/elements">
		<param name="defaultProfiletypeID" type="profiletypes" default="0" label="DEFAULT PROFILETYPE ID" description="DEFAULT PROFILETYPE ID.DESC" />
		<param name="guestProfiletypeID" type="profiletypes" default="0" label="GUEST PROFILETYPE ID" description="GUEST PROFILETYPE ID.DESC" />
	</params>
	<params group="advPtypeSettings">
		<param name="allow_user_to_change_ptype_after_reg" type="radio" default="1" label="ALLOW USER TO CHANGE PROFILE TYPE AFTER REGISTRATION" description="ALLOW USER TO CHANGE PROFILE TYPE AFTER REGISTRATION.DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>	
	</params>
	
	<!-- INTEGRATION SETTINGS -->
	<params group="basicIntegrationSettings">
		<param name="show_ptype_during_reg" type="radio" default="1" label="INTEGRATE JSPT WITH REGISTRATION" description="INTEGRATE JSPT WITH REGISTRATION.DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="aec_integrate" type="radio" default="0" label="INTEGRATE AEC" description="INTEGRATE AEC.DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>			
	</params>
	
	
	<!-- REGISTRATIN SETTINGS -->	
	<params group="advRegistrationSettings">
		<param name="jspt_show_radio" type="radio" default="1" label="DURING REGISTRATION SHOW CHOOSE ACCOUNT TYPE AS" description="DURING REGISTRATION SHOW CHOOSE ACCOUNT TYPE AS.DESC">
			<option value="0">Select Box</option>
			<option value="1">Radio Options</option>
		</param>
		<param name="jspt_fb_show_radio" type="radio" default="0" label="DURING FACEBOOK CONNECTIVITY SHOW CHOOSE ACCOUNT TYPE AS" description="DURING FACEBOOK CONNECTIVITY SHOW CHOOSE ACCOUNT TYPE AS.DESC">
			<option value="0">Select Box</option>
			<option value="1">Radio Options</option>
		</param>
		<param name="user_reg" type="radio" default="jomsocial" label="AFTER PROFILETYPE SELECTION GO TO REGISTRATION" description="AFTER PROFILETYPE SELECTION GO TO REGISTRATION.DESC">
               <option value="jomsocial">JomSocial</option>
               <option value="joomla">Joomla</option>
       </param>	
	</params>
	
	<!-- APPLICATION SETTINGS -->
	<params group="advAppsSettings">
		<param name="jspt_block_dis_app" type="radio" default="0" label="BLOCK DISPLAY APPLICATION" description="BLOCK DISPLAY APPLICATION WHEN VISITING OTHERS PROFILE.DESC">
				<option value="0">Owner</option>
				<option value="1">Visitor</option>
				<option value="2">Both</option>
		</param>
	</params>
		
	<!-- AEC SETTINGS -->
	<params group="advAecSettings" addpath="/components/com_xipt/elements">		
		<param name="aec_message" type="radio" default="b" label="DISPLAY MESSAGE AFTER PLAN SELECTION" description="DISPLAY MESSAGE AFTER PLAN SELECTION.DESC">
			<option value="b">Both, Plan and Profiletype</option>
			<option value="pl">Only Plan</option>
			<option value="pt">Only Profiletype</option>
		</param>			
	</params>
	
</config>
