<?xml version="1.0" encoding="utf-8"?>
<install type="component" version="1.5.0" method="upgrade">
	<name>XIPT</name>
	<creationDate>2009-08-01</creationDate>
	<author>Team JoomlaXi</author>
	<authorEmail>shyam@joomlaxi.com</authorEmail>
	<authorUrl>http://www.joomlaxi.com</authorUrl>
	<copyright>All rights reserved</copyright>
	<license>GNU GPL v2.0</license>
	<version>@global.version@.@svn.lastrevision@</version>
	<description>JSPT (code name is XIPT) is a component to setup multiple user profile types in JomSocial</description>
	<installfile>install.xipt.php</installfile>
	<uninstallfile>uninstall.xipt.php</uninstallfile>

	<languages folder="site">
		<language tag="en-GB">en-GB.com_xipt.ini</language>
	</languages>
	<files folder="site">
		<filename>index.html</filename>
		<filename>xipt.php</filename>
		<filename>includes.xipt.php</filename>
		<filename>api.xipt.php</filename>
		<filename>defines.xipt.php</filename>
		<filename>license.txt</filename>

		<folder>controllers</folder>
		<folder>models</folder>		
		<folder>libraries</folder>
		<folder>assets</folder>
		<folder>views</folder>

	</files>
	<administration>
		<menu link="option=com_xipt" img="components/com_xipt/images/icon-profiletypes.gif">JomSocial Profile Types</menu>
		<submenu>
			<menu view="cpanel" img="components/com_xipt/images/icon-cpanel.png">Control Panel</menu>
			<menu view="configuration" img="components/com_xipt/images/icon-jspt-config.gif">Global Configuration</menu>
			<menu view="setup" img="components/com_xipt/images/icon-setup.gif">Setup</menu>
			<menu view="profiletypes" img="components/com_xipt/images/icon-profiletypes.gif">Profile Types</menu>
			<menu view="aclrules" img="components/com_xipt/images/icon-aclrules.gif">Access Control</menu>
			<menu view="applications" img="components/com_xipt/images/icon-applications.gif">Applications</menu>
			<menu view="profilefields" img="components/com_xipt/images/icon-profilefields.gif">Profile Fields</menu>
		</submenu>
		<languages folder="admin">
			<language tag="en-GB">en-GB.com_xipt.ini</language>
		</languages>
	
		<files folder="admin">
			<filename>index.html</filename>
			<filename>admin.xipt.php</filename>
			<filename>config.xml</filename>
			<filename>watermark.xml</filename>
			<filename>jspt_functions.php</filename>
			<filename>includes.xipt.php</filename>
			
			<folder>controllers</folder>
			<folder>models</folder>
			<folder>helpers</folder>			
			<folder>libraries</folder>
			<folder>elements</folder>
			<folder>views</folder>
			<folder>tables</folder>
			<folder>hacks</folder>
			<folder>images</folder>			
		</files>
	</administration>
</install>
