<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://dev.joomla.org/xml/1.5/module-install.dtd">
<install version="1.5" type="module" client="site">
	<name>Xipt Members</name>
	<author>Community</author>
	<creationDate>March 2009</creationDate>
	<copyright>Copyright (C) 2008. All rights reserved.</copyright>
	<license/>
	<authorEmail/>
	<authorUrl/>	
	<version>1.6</version>
	<description>Show the latest members</description>
	<languages>
		<language tag="en-GB">en-GB.mod_xiptmembers.ini</language>
	</languages>
	<files>
		
		<filename module="mod_xiptmembers">mod_xiptmembers.php</filename>
		<filename>mod_xiptmembers.xml</filename>
		<filename>helper.php</filename>
		<folder>tmpl</folder>
		<filename>elements/profiletypes.php</filename>
	</files>
	<params addpath="/modules/mod_xiptmembers/elements" >
		<param name="cache" type="list" default="1" label="Caching" description="Select whether to cache the content of this module">
			<option value="1">Use global</option>
			<option value="0">No caching</option>
		</param>
<!--
		<param name="updated_avatar_only" type="list" default="0" label="Updated avatar only" description="Show users with updated avatar only.">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
-->
		<param name="profile_type" type="profiletypes" default="0" label="Select Profile Type" description="Show users with profile type." />

		<param name="tooltips" type="list" default="1" label="Use Tooltips" description="Select to choose whether to show the tooltips or not.">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="count" type="text" default="10" label="Count" description="The number of online user(s) to display (default is 10)" />		
		<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
		<param name="loadmootools" type="list" default="1" label="Load mootools" description="Select YES for the module to load mootools, and NO to rely on the template to load it">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
	</params>
</install>
