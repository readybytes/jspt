<?xml version="1.0" encoding="UTF-8"?>
<project name="Copying working copy data to SVN" basedir="." default="copy_to_svn">
 
        <property name="target" value="@local.repository.location@" override="true" />
        <property name="source" value="${project.basedir}" override="true" />
        
        <!-- Copy Target -->
        <target name="copy_to_svn" description="copy target">
                
                <copy   file="${source}/language/en-GB/en-GB.com_xipt.ini" 
                        tofile="${target}/source/languages/site/en-GB.com_xipt.ini" 
                         />

                <copy   file="${source}/administrator/language/en-GB/en-GB.com_xipt.ini" 
                        tofile="${target}/source/languages/admin/en-GB.com_xipt.ini" 
                         />

		<delete dir="${source}/administrator/components/com_xipt/install/extensions" />

		<copy todir="${target}/source/admin">
			<fileset dir="${source}/administrator/components/com_xipt">
				<include name="**/*.*" />
			</fileset>
        </copy>
        
		<move file="${target}/source/admin/manifest.xml" 
                        tofile="${target}/source/manifest.xml" 
         />
		
		<!-- Copy plguin files again into folder -->
		<copy   file="${source}/plugins/system/xipt_system.php" 
                        tofile="${target}/source/install/extensions/xipt_system/xipt_system.php" 
                         />

		<copy   file="${source}/plugins/system/xipt_system.xml" 
                        tofile="${target}/source/install/extensions/xipt_system/xipt_system.xml" 
                         />


		<copy   file="${source}/plugins/community/xipt_community.php" 
                        tofile="${target}/source/install/extensions/xipt_community/xipt_community.php" 
                         />

		<copy   file="${source}/plugins/community/xipt_community.xml" 
                        tofile="${target}/source/install/extensions/xipt_community/xipt_community.xml" 
                         />                  
            
                 
                                              
		<!-- first copy -->
		<copy todir="${target}/source/install">
			<fileset dir="${target}/source/admin/install">
				<include name="**/*.*" />
			</fileset>
       		 </copy>

		<!-- delete admin installer -->
		<delete dir="${target}/source/admin/install" />

       		 <copy todir="${target}/source/site">
			<fileset dir="${source}/components/com_xipt">
				<include name="**/*.*" />
			</fileset>
                </copy>        

		<copy todir="${target}/test">
			<fileset dir="${source}/test/">
				<include name="**/*.*" />
			</fileset>
                </copy>

		<copy   file="${source}/build.xml" 
                        tofile="${target}/script/revbuild.xml" 
                         />
        </target>
</project>
